/* pages/managerLogin/managerLogin.wxss */
.container{
  margin:0;
  padding:0;
}
.head{
  background-color: #adff2f;
    width:80%;
    height:auto;

    color:blue;
    text-align: center;
    padding-top: 50rpx;
    padding-bottom: 50rpx;
    font-weight: bold;
    font-size: 60px;

    border:2px solid black;
    border-radius: 10px;
}
.logId{
  width: 100%;
  /* height: auto; */

  display: flex;
  flex-direction: row;

  margin-left:  auto;
  margin-right:  auto;
  margin-top: 33%;
}

.logId .words{
  width:10%;
  height: 30px;
  /* background-color: bisque; */
  text-align: center;
  font-size: 20px;
  margin-top: auto;
  margin-bottom: auto;
  margin-left: 6%;
 
}

.logId .id{
  background-color: rgb(253, 253, 67);
  margin-right: 30rpx;

  border:2px solid black;
  border-radius: 1%;

  width: 75%;
  height: 50px;
}
.logPassword{
  width: 100%;

  display: flex;
  flex-direction: row;

  margin-top:50rpx;
  margin-left:0;
}

.logPassword .words{
  width:70rpx;
  height: 90rpx;
  /* background-color: bisque; */
  text-align: center;
  font-size: 20px;
  margin-top: 0;
  margin-bottom: auto;
  margin-left: 1%;
}

.logPassword .password{
  background-color: rgb(253, 253, 67);

  border:2px solid black;
  border-radius: 1%;

  width: 75%;
  height: 50px;
}

.logButton{
  height:260rpx;
  width: 260rpx;
  border-radius: 50%;
  border: 5px double #ff2f2f;
  background-color: #2fffc1;
  margin-top:50rpx;
}
.logButton .logButtonTxt{
  font-size: 30px;
  color:#ff2f2f;
  margin-top: 24%;
}